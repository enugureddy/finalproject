    <body>
        <form action="/guest/contactpost" method="POST" class="formdes"  >
            <h3 style="color: rgb(0, 0, 0);"><center>Contact</center></h3><br>
            <div class="mb-3">
                <label>add ID</label>
                <input type="text" class="form-control" id="id" name="id" value="<%=mdata._id %>" readonly required>
              </div>
              <div class="mb-3">
                <label>Email</label>
                <input type="text" class="form-control" id="email" name="email" value="<%=mdata.email %>" readonly required>
              </div>
              <div class="mb-3">
                <label>Description</label>
                <input type="text" class="form-control" id="description" name="description" required>
              </div>
            
             
             
              
             
              <button type="submit" class="btn btn-primary w-100">Contact</button> 
          </form>
    </body>

