        <title>
            Member Login
        </title>
    </head>

    <body>
        <form action="/member/loginverify" method="post" class="formdes">
            <h3><center>Member Login</center></h3><br>
              <div class="mb-3">
                <label>Member Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter  Email" required>
              </div>
              <div class="mb-3">
                <label>Member Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter  Password" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Login</button> <br> <br>
              <div style="text-align: center;font-size: 18px; color: black;"><a href="member/member-register">New User? Register Here</a></div>
              <div style="text-align: center;font-size: 18px; color: black;"><a href="member/member-forgotpassword">Forgot Password?</a></div>
          </form>
    </body>

</html>
